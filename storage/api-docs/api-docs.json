{
    "openapi": "3.0.0",
    "info": {
        "title": "API Template",
        "description": "Documentação da API Template.",
        "contact": {
            "email": "daniel@danielneto.dev.br"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/auth/registration/confirmation": {
            "post": {
                "tags": [
                    "Confirmação de Cadastro"
                ],
                "summary": "Confirmar cadastro do usuário",
                "description": "Confirmação de cadastro do usuário por meio do código enviado por e-mail ou SMS. Se o usuário não tiver uma senha cadastrada, será necessário enviar a senha e sua confirmação.",
                "operationId": "App\\Traits\\Auth\\RegistrationConfirmation::confirmation",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail do usuário (Obrigatório apenas se não for enviado o número de celular)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Número de celular do usuário (Obrigatório apenas se não for enviado o e-mail)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Código de confirmação (Enviado para o usuário por e-mail ou SMS)",
                        "required": true,
                        "example": 952861
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Senha (Quando for obrigatória, será retornada uma mensagem de validação informando)",
                        "required": false,
                        "example": "password"
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "description": "Confirmação de senha (Quando for obrigatória, será retornada uma mensagem de validação informando)",
                        "required": false,
                        "example": "password"
                    }
                ],
                "requestBody": {
                    "description": "Dados para confirmação do cadastro.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "phone",
                                    "token"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "fulano@dominio.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "17987654321"
                                    },
                                    "token": {
                                        "type": "string",
                                        "example": "952861"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cadastro confirmado com sucesso. Retorna os dados do usuário com o token de autenticação."
                    },
                    "404": {
                        "description": "Código de verificação inválido."
                    },
                    "422": {
                        "description": "Validação dos parâmetros."
                    }
                }
            }
        },
        "/api/v1/auth/registration/confirmation/resend-code": {
            "post": {
                "tags": [
                    "Confirmação de Cadastro"
                ],
                "summary": "Reenviar código de confirmação de cadastro",
                "description": "Reenvia código de confirmação de cadastro por e-mail ou SMS.",
                "operationId": "App\\Traits\\Auth\\RegistrationConfirmation::resendCode",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail do usuário (Obrigatório apenas se não for enviado o número de celular)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Número de celular do usuário (Obrigatório apenas se não for enviado o e-mail)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    }
                ],
                "requestBody": {
                    "description": "Dados do usuário para reenvio do código de confirmação.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "phone"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "fulano@dominio.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "17987654321"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Código reenviado com sucesso."
                    },
                    "404": {
                        "description": "Código não encontrado devido ao usuário já estar ativo ou não existir."
                    },
                    "422": {
                        "description": "Validação dos parâmetros."
                    }
                }
            }
        },
        "/api/v1/auth/registration/forgot-password": {
            "post": {
                "tags": [
                    "Recuperação de Senha"
                ],
                "summary": "Solicitar recuperação de senha do usuário. O usuário deverá se estar ativo.",
                "description": "Solicita envio do código de recuperação de senha do usuário por e-mail ou SMS.",
                "operationId": "App\\Traits\\Auth\\ResetPasswords::request",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail do usuário (Obrigatório apenas se não for enviado o número de celular)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Número de celular do usuário (Obrigatório apenas se não for enviado o e-mail)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    }
                ],
                "requestBody": {
                    "description": "Dados do usuário para envio do código de recuperação de senha.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "phone"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "fulano@dominio.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "17987654321"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Recuperação de senha enviada com sucesso."
                    },
                    "404": {
                        "description": "Usuário não encontrado por não existir ou não estar ativo."
                    },
                    "422": {
                        "description": "Validação dos parâmetros."
                    }
                }
            }
        },
        "/api/v1/auth/registration/reset-password": {
            "post": {
                "tags": [
                    "Recuperação de Senha"
                ],
                "summary": "Recuperar senha do usuário",
                "description": "Realiza recuperação de senha do usuário por meio de código de recuperação enviado por e-mail ou SMS.",
                "operationId": "App\\Traits\\Auth\\ResetPasswords::reset",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail do usuário (Obrigatório apenas se não for enviado o número de celular)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "description": "Número de celular do usuário (Obrigatório apenas se não for enviado o e-mail)",
                        "required": true,
                        "example": "fulano@dominio.com"
                    },
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Código de confirmação (Enviado para o usuário por e-mail ou SMS)",
                        "required": true,
                        "example": 952861
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "Senha",
                        "required": true,
                        "example": "password"
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "description": "Confirmação de senha",
                        "required": true,
                        "example": "password"
                    }
                ],
                "requestBody": {
                    "description": "Dados do usuário para reenvio do código de confirmação",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "phone",
                                    "token",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "fulano@dominio.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "17987654321"
                                    },
                                    "token": {
                                        "type": "string",
                                        "example": "952861"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Senha recuperada com sucesso."
                    },
                    "403": {
                        "description": "Token de recuperação de senha expirado ou inválido."
                    },
                    "404": {
                        "description": "Usuário não encontrado por não existir ou não estar ativo."
                    },
                    "422": {
                        "description": "Validação dos parâmetros."
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Projects",
            "description": "API Endpoints of Projects"
        }
    ],
    "security": [
        []
    ]
}